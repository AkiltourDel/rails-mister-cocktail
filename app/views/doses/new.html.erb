<div class="container container-show">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3><%= @cocktail.name %></h3>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
