
<div class="wrapper">
  <div class="banner">
    <div class="banner-content">
      <h1>Rails Mister Cocktail</h1>
      <%= link_to "Add your Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg"%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image: url(' <%= cl_image_path cocktail.photo %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

