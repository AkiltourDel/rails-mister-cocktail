<div class="container">

  <div class="row container-show">
    <div class="col-xs-12 col-sm-4 col-sm-offset-1">
      <% @cocktails.each do |cocktail| %>
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <div class="card card-product">
      </div>
    </div>



    <div class="col-xs-6 col-sm-4 col-sm-offset-1">
       <h1><%= @cocktail.name %></h1>
    </div>

    <div class="col-xs-6 col-sm-5 col-sm-offset-1">
      <h3>Ingredients</h3>
        <ul><% @doses.each do |dose| %>
          <li><%= dose.ingredient.name %> - <%= dose.description %></li>
        <% end %>
      </ul>
    </div>


    <div class="col-xs-6 col-sm-5 col-sm-offset-1">
      <h4>Rating :</h4>
      <p> ⭐️⭐️⭐️⭐️</p>
      <h4>Add a Rating</h4>
    </div>

  </div>

  <div class="row container-show">
    <h4>Add Ingredients</h4>
    <%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-lg"%>
  </div>
</div>
