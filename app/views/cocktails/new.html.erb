<div class="container container-show">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h3>Add a new cocktail</h3>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %>
    </div>
 </div>
</div>
